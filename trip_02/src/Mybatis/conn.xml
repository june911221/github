<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration	PUBLIC "-//mybatis.org//DTD Config 3.0//EN"	"http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
		<typeAliases> <!--별명설정 -->
		<typeAlias type="vo.BoardDto" alias="Dto"/> <!-- BoardDto=Dto -->
		<typeAlias type="vo.CommentDto" alias="coDto"/><!-- CommentDto=coDto  -->
	</typeAliases>


<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="com.mysql.jdbc.Driver" />
				<property name="url" value="jdbc:mysql://localhost/data?useSSL=false&amp;useUnicode=true&amp;characterEncoding=utf8" />
				<property name="username" value="root" />
				<property name="password" value="911221" />
			</dataSource>
		</environment>
	</environments>
	
	<mappers>
		<mapper resource="Mybatis/mapper.xml"/> <!-- mapper경로 -->
	</mappers>


</configuration>
